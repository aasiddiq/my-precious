{
  "name": "my-precious-next",
  "version": "2.2.2",
  "description": "a local package archive, of my own",
  "bin": "index.js",
  "main": "index.js",
  "files": [
    "*.js",
    "lib"
  ],
  "scripts": {
    "prepack": "npm ci",
    "prerelease": "npm t",
    "postrelease": "npm publish && git push --follow-tags",
    "pretest": "standard",
    "release": "standard-version -s -t cli-v -r patch",
    "test": "tap -J --nyc-arg=--all --coverage test/specs",
    "update-coc": "weallbehave -o . && git add CODE_OF_CONDUCT.md && git commit -m 'docs(coc): updated CODE_OF_CONDUCT.md'",
    "update-contrib": "weallcontribute -o . && git add CONTRIBUTING.md && git commit -m 'docs(contributing): updated CONTRIBUTING.md'"
  },
  "repository": "https://github.com/zkat/my-precious",
  "keywords": [
    "npm",
    "package manager",
    "caching",
    "downloader",
    "local registry"
  ],
  "author": {
    "name": "Kat March√°n",
    "email": "kzm@sykosomatic.org",
    "twitter": "maybekatz"
  },
  "license": "ISC",
  "dependencies": {
    "libprecious-next": "^2.2.0",
    "npmlog": "^4.1.2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "lerna": "^3.0.0",
    "mkdirp": "^0.5.1",
    "nyc": "^14.0.0",
    "require-inject": "^1.4.2",
    "standard": "^12.0.1",
    "standard-version": "^6.0.0",
    "tacks-next": "^1.3.1",
    "tap": "^12.0.1",
    "weallbehave": "^1.2.0",
    "weallcontribute": "^1.0.8"
  },
  "config": {
    "nyc": {
      "exclude": [
        "node_modules/**",
        "test/**"
      ]
    }
  },
  "bundleDependencies": [
    "yargs",
    "libprecious-next",
    "npmlog"
  ],
  "overrides": {
    "minimist": "^1.2.5",
    "yargs-parser": "^13.1.2",
    "lock-verify": {
      "@iarna/cli": {
        "yargs": "^13.3.2"
      }
    }
  }
}
